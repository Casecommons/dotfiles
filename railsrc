def change_log(stream)
  ActiveRecord::Base.logger = Logger.new stream
  ActiveRecord::Base.clear_active_connections!
end

def show_log
  change_log STDOUT
end

def hide_log
  change_log nil
end

# Tell Rails to log to STDOUT if in Rails console
change_log STDOUT

