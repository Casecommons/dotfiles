alias gzdir='tar czf ../$(basename $(pwd)).tar.gz .'
alias gzdirs='find . -mindepth 1 -maxdepth 1 -type d -exec tar czf {}.tar.gz {} \;'
alias h='history | grep'
alias netstat='lsof -i -P'
alias ql='quicklook'
alias quicklook='qlmanage -p &>/dev/null'
alias speedtest='wget --delete-after http://cachefly.cachefly.net/10mb.test'

# Easy archive extraction
# Adapted from <https://github.com/anveo/dotfiles>
function extract {
  if [ -f $1 ]; then
    case $1 in
      *.tar.bz2)   tar xjf $1   ;;
      *.tar.gz)    tar xzf $1   ;;
      *.bz2)       bunzip2 $1   ;;
      *.rar)       unrar x $1   ;;
      *.gz)        gunzip $1    ;;
      *.tar)       tar xf $1    ;;
      *.tbz2)      tar xjf $1   ;;
      *.tgz)       tar xzf $1   ;;
      *.zip)       unzip $1     ;;
      *.Z)         uncompress $1;;
      *.7z)        7z x $1      ;;
      *)           echo "Don't know how to extract '$1'.";;
    esac
  else
    echo "'$1' is not a valid file."
  fi
}

function play {
  if [ "$1" == "list" ]; then
    # TODO: Remove magic number for column padding
    find /usr/share/emacs/22.1/lisp/play -maxdepth 1 -type f -print | xargs basename | awk -F. '/(el|elc)$/ { printf "%-10s\n", $1 }' | column
  elif [ -f /usr/share/emacs/22.1/lisp/play/$1.elc -o -f /usr/share/emacs/22.1/lisp/play/$1.el ]; then
    echo "Press CTRL+X then CTRL+C to quit, okay?"
    read -s -n 1
    emacs -q --no-splash -f $1
  else
    echo "Unknown game. Run \"play list\" to see a list of games."
  fi
}

# Opens a man page in Preview.app
# @param The name of the command to open the man page for
function pman {
  # Convert to PDF first so Preview doesn't prompt to save on quit
  man -t $@ | ps2pdf - - | open -g -f -a /Applications/Preview.app
}

# Opens a man page in Textmate.app
# @param The name of the command to open the man page for
function tman {
  MANWIDTH=160 MANPAGER='col -bx' man $@ | mate
}

# Starts a basic HTTP server in the current directory
# @param The port to listen on. Defaults to 8080.
function webserver {
  python -m SimpleHTTPServer ${1:-8080}
}
