alias cmdstatistics="history | awk '{print \$2}' | awk 'BEGIN{FS=\"|\"}{print \$1}' | sort | uniq -c | sort -n | tail -n 20 | sort -nr"
alias colors='set | egrep '"'"'COLOR_\w*'"'"' | awk -F= '"'"'{ gsub("\047", ""); gsub(/\\033/, ""); print "\033" $2 $1 }'"'"'; echo -en $COLOR_NC'
alias gzdir='tar czf ../$(basename $(pwd)).tar.gz .'
alias gzdirs='find . -mindepth 1 -maxdepth 1 -type d -exec tar czf {}.tar.gz {} \;'
alias h='history | grep'
alias httpheaders='curl -I'
alias pwdreal='pwd -P'  # Follows symlinks
alias reloadbash='source ~/.bashrc'
alias speedtest='wget --delete-after http://cachefly.cachefly.net/10mb.test'

# Alias git to hub if available
type -P hub &> /dev/null && alias git=hub

# Easy archive extraction
# @param The filename to extract
function extract {
  if [ -f $1 ]; then
    case $1 in
      *.tar.bz2)   tar xjf $1   ;;
      *.tar.gz)    tar xzf $1   ;;
      *.bz2)       bunzip2 $1   ;;
      *.rar)       unrar x $1   ;;
      *.gz)        gunzip $1    ;;
      *.tar)       tar xf $1    ;;
      *.tbz2)      tar xjf $1   ;;
      *.tgz)       tar xzf $1   ;;
      *.zip)       unzip $1     ;;
      *.Z)         uncompress $1;;
      *.7z)        7z x $1      ;;
      *)           echo "Don't know how to extract '$1'.";;
    esac
  else
    echo "'$1' is not a valid file."
  fi
}

# Shortcut for playing Emacs games
# @param The game to play, or "list" for a list of available games
function play {
  if [ "$1" == "list" ]; then
    if [ -d /usr/share/emacs/*/lisp/play ]; then
      # TODO: Remove magic number for column padding
      find /usr/share/emacs/*/lisp/play -maxdepth 1 -type f -print0 | xargs -0 -I {} basename "{}" | sort | awk -F. '/(el|elc)$/ { printf "%-10s\n", $1 }' | column
    else
      echo "No games found :(. Try installing Emacs!"
    fi
  elif [ -f /usr/share/emacs/*/lisp/play/$1.elc -o -f /usr/share/emacs/*/lisp/play/$1.el ]; then
    echo -n "Press CTRL+X then CTRL+C to quit, okay?"
    read -s -n 1
    echo -en "\r                                       "
    emacs -q --no-splash -f $1
  else
    echo "Unknown game. Run \"play list\" to see a list of games."
  fi
}

# Starts a basic HTTP server in the current directory
# @param The port to listen on. Defaults to 8080.
function webserver {
  python -m SimpleHTTPServer ${1:-8080}
}

# Specific to "Darwin" aka Mac OS X
if $PLATFORM_IS_DARWIN; then
  alias netstat='lsof -i -P'
  alias ql='quicklook'
  alias quicklook='qlmanage -p &>/dev/null'

  # Opens a man page in Preview.app
  # @param The name of the command to open the man page for
  function pman {
    # Convert to PDF first so Preview doesn't prompt to save on quit
    man -t $@ | ps2pdf - - | open -g -f -a /Applications/Preview.app
  }
fi

# Specific to Linux, specifically Ubuntu
if $PLATFORM_IS_LINUX; then
  alias aptupgrade='sudo apt-get update && sudo apt-get upgrade'
  # Turn on colors for various commands
  if [ -x /usr/bin/dircolors ]; then
    eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
  fi
fi

# Load RVM
[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm"
