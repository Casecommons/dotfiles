[user]
	name = Andrew Marshall
	email = andrew@johnandrewmarshall.com
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
[color]
	ui = true
[alias]
	amend = commit --amend -C HEAD
	co = checkout
	dc = diff --cached
	l = !". ~/.sh_common/functions/pretty_git_log && pretty_git_log"
	pop = reset --soft head~1
	root = rev-parse --show-toplevel
	st = status
	unpulled = !"git fetch && git log HEAD..@{u}"
	unpushed = log @{u}..HEAD
[push]
	default = current
[format]
	pretty = format:"%C(yellow)%h%Creset %Cgreen%ad%Creset %C(cyan)%an%Creset%C(red)%d%Creset %s"
[pager]
	unpushed = false
	unpulled = false
[log]
	date = relative
