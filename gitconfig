[advice]
	commitBeforeMerge = false
	detachedHead = false
	pushNonFastForward = false
	resolveConflict = false
	statusHints = false
[alias]
	amend = commit --amend -C HEAD
	co = checkout
	dc = diff --cached
	pop = reset --soft head~1
	root = rev-parse --show-toplevel
	st = status
	unpulled = !"git fetch && git log HEAD..@{u}"
	unpushed = log @{u}..HEAD
[color]
	ui = auto
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
[fetch]
	prune = true
[log]
	decorate = true
[pager]
	unpulled = false
	unpushed = false
[pull]
	ff = only
[push]
	default = simple
