[user]
	name = Andrew Marshall
	email = andrew@johnandrewmarshall.com
[alias]
	amend = commit --amend -C HEAD
	co = checkout
	dc = diff --cached
	l = !". ~/.sh_common/functions/pretty_git_log && pretty_git_log"
	pop = reset --soft head~1
	root = rev-parse --show-toplevel
	st = status
	unpulled = !"git fetch && git log HEAD..@{u}"
	unpushed = log @{u}..HEAD
[color]
	ui = true
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
[pager]
	unpulled = false
	unpushed = false
[push]
	default = current
